apiVersion: apps/v1
kind: Deployment
metadata:
  name: gethive
  namespace: development
spec:
  selector:
    matchLabels:
      app: gethive
  replicas: 3
  template:
    metadata:
      labels:
        app: gethive
    spec:
      containers:
        - name: gethive
          image: pfontaine/gethive:{{ commit_sha }}
          imagePullPolicy: Always
          ports:
            - containerPort: 80

---

apiVersion: v1
kind: Service
metadata:
  name: gethive-service
  namespace: development
spec:
  selector:
    app: gethive
  ports:
  - port: 80
    targetPort: 80
  type: ClusterIP
